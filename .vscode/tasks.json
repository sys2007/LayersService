{
    // 创建一个npm task（vscode概念），用来执行npm run build
    // 对应launch.json里的preLaunchTask
    "version": "0.1.0",
    "command": "npm", //执行npm命令
    "isShellCommand": true,
    "showOutput": "always",
    "suppressTaskName": true,
    "tasks": [
        {
            "taskName": "build", //task名称
            "args": [ //npm run build
                "run",
                "build"
            ],
            "isBuildCommand": true
        }
    ]
}